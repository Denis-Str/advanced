include ./mixins.pug

-
  var authorName = "Денис Стрельцов"
  var  navData = {
      "Главная" : "#1",
      "Обо мне" : "#2",
      "Навыки" : "#3",
      "Работы" : "#4",
      "Отызыв" : "#5",
      "Связаться" : "#6"
  }
  var socialData = {
    "insta" : "#1",
    "vk" : "#2",
    "github" : "#3"
  }

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="icon" type="image/png" sizes="32x32" href="./images/content/favicon-32x32.png")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        include ./pug-example/sections/header
        .wrap__top
          .parallax
            .parallax__layer(data-speed="0")
              +image('content/promo-parallax/1.jpg', 'parallax__img')
            - var i = 0
            each item in [2, 3, 4, 5, 6]
              .parallax__layer(data-speed=`${(i += 0.2).toFixed(2)}`)
                +image(`content/promo-parallax/${item}.png`, 'parallax__img')
            .parallax__layer(data-speed="0")
              +image('content/promo-parallax/7.png', 'parallax__img')
          include ./pug-example/sections/promo
          include ./pug-example/sections/about
        include ./pug-example/sections/skills
        include ./pug-example/sections/works
        .wrap__bottom
          .parallax
            .parallax__layer(data-speed="0")
              +image('content/budda-parallax/1.jpg', 'parallax__img')
            - var i = 0
            each item in [2, 3]
              .parallax__layer(data-speed=`${(i += 0.2).toFixed(2)}`)
                +image(`content/budda-parallax/${item}.png`, 'parallax__img')
            .parallax__layer(data-speed="0")
              +image('content/budda-parallax/4.png', 'parallax__img')
          include ./pug-example/sections/reviews
          include ./pug-example/sections/feedback
        include ./pug-example/sections/footer
        nav.header__menu-mobile.menu-mobile
          .menu-mobile.menu-mobile__hamburger
            .hamburger.hamburger_active
              span.hamburger__line1
              span.hamburger__line2
              span.hamburger__line3
          .menu-mobile__container
            nav.nav
              +nav(navData, "header__mobile")
            +social(socialData)
        include pug-example/components/modal
      include pug-example/sections/entry
