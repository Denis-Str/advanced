.tag {
    max-width: 280px;
    @include tablets {
       max-width: auto;
    }
    &__list {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
        @include desktop {
            flex-wrap: wrap;
            justify-content: flex-start;
        }
        @include tablets {
            margin-bottom: 20px;
        }
    }
    &__item {
        border-radius: 22px;
        background-color: #f3f5f9;
        padding: 15px 19px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
        font-weight: 600;
        @include desktop {
            padding: 12px 16px;
            margin-bottom: 15px;
            margin-right: 15px;
        }
        @include tablets {
            &:not(:last-child) {
                margin-right: 15px;
            }
        }

    }
}