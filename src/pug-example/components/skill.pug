script(type="text/x-template")#skill
    .stack__svg-block
        svg(class="stack__svg" viewBox="0 0 100 100")
            circle(cx="50" cy="50" r="40").stack__circle-lower
            circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url(#skillsGrad)" transform="rotate(180 50 50)").stack__circle-upper
            linearGradient(id="skillsGrad" x1="0%" y1="0%" x2="100%" y2="0%")
                stop(offset="0%" stop-color="#9300e8")
                stop(offset="100%" stop-color="#4a00ed")
